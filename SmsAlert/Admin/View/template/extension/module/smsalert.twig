{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning is not empty %}

            {% for error in error_warning %}
                <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error.error }}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endfor %}

        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="s-w">


                {% if smsalert_test_result is not empty %}
                    <div class="alert alert-warning smsalert-alert smsalert-alert-success alert-dismissible show" role="alert">
                        The test is successful! <a
                                href="#"
                                type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </a>
                    </div>
                {% endif %}

                <div class="s-h">
                    <img src="{{ smsalert_logo }}" style="height: 100px" alt="SMSAlert">
                </div>
                <div class="s-b">
                    <div class="group">
                        <label><p>Steps</p></label>
                        <ul>
                            <li><span class="tag">1</span>
                                <p>Create an account on : <span><a href="https://smsalert.mobi">SMSAlert</a></span>
                                </p></li>
                            <li><span class="tag">2</span>
                                <p>Get API key from : <a
                                            href="https://smsalert.mobi/settings">SMS Alert settings page</a></p></li>
                            <li><span class="tag">3</span>
                                <p>Configure settings below</p></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="panel-body s-w">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-first-module"
                      class="form-horizontal">
                    {% if smsalert_apiKey is not empty %}
                        <div class="group">
                            <label>{{ btn_test_text }}</label>
                            <input type="text" name="smsalert_test_phone_number"
                                   value="{{ smsalert_test_phone_number is not empty ?  smsalert_test_phone_number : '' }}"
                                   placeholder="{{ btn_test_placeholder }}">
                            <div class="description">
                                <p>{{ btn_test_description }}</p>
                            </div>
                            <input type="submit" name="smsalert_test" value="{{ btn_test_send }}">
                        </div>
                    {% endif %}
                    <div class="group">
                        <div class="g">
                            <label>{{ btn_activate_text }}</label>
                            <input type="checkbox" name="smsalert_active"
                                   value="true" {{ smsalert_active == true ?  'checked="checked"' : '' }}>
                        </div>
                    </div>

                    <div class="group">
                        <label>{{ btn_username_text }}</label>
                        <input type="text" name="smsalert_username" value="{{ smsalert_username ? smsalert_username : '' }}"
                               placeholder="{{ btn_username_placeholder }}">
                        <div class="description">
                            <p>{{ btn_usernmae_description }}</p>
                        </div>
                    </div>

                    <div class="group">
                        <label>{{ btn_apiKey_text }}</label>
                        <input type="text" name="smsalert_apiKey" value="{{ smsalert_apiKey ? smsalert_apiKey : '' }}"
